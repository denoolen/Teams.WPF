<UserControl x:Class="Teams.Client.RightBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Teams.Client"
             xmlns:viewmodel1="clr-namespace:Teams.Client.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodel1:MainViewModel/>
    </UserControl.DataContext>
    <Grid DataContext="{Binding UserSelect}">
        <Border Background="Gray" CornerRadius="15 15 0 15" Margin="10 12" HorizontalAlignment="Right">
                <TextBlock HorizontalAlignment="Right" Margin="10" Grid.Column="1" TextWrapping="Wrap" 
                       Text="Hello world" Foreground="White"/>
            </Border>
        <TextBlock x:Name="Date" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="10" Margin="10 -2"/>
    </Grid>
</UserControl>
