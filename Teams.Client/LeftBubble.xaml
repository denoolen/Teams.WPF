<UserControl x:Class="Teams.Client.LeftBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Teams.Client"
             xmlns:viewmodel1="clr-namespace:Teams.Client.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodel1:MainViewModel/>
    </UserControl.DataContext>
    <Grid DataContext="{Binding UserSelect}" >

        <Border  Background="{StaticResource PrimaryHueDarkBrush}" CornerRadius="15 15 15 0" Margin="10 12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Margin="10" Grid.Column="0" TextWrapping="Wrap" 
                       Text="Max:" Foreground="White"/>
                <TextBlock Margin="10" Grid.Column="1" TextWrapping="Wrap" 
                       Text="Hello world" Foreground="White"/>
            </Grid>
        </Border>
        <TextBlock Text="Thursday 5 pm:45" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="10" Margin="10 -2"/>
    </Grid>
</UserControl>
